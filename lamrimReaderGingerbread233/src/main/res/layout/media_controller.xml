<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendarRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="10dp"
    android:background="#CC000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="4dp" >

        <ImageButton
            android:id="@+id/ffwd"
            style="@android:style/MediaButton.Ffwd"
            android:layout_alignTop="@+id/pause"
            android:layout_toRightOf="@+id/pause"
            android:src="@drawable/ic_media_next" />

        <ImageButton
            android:id="@+id/rew"
            style="@android:style/MediaButton.Rew"
            android:layout_alignTop="@+id/pause"
            android:layout_toLeftOf="@+id/pause"
            android:src="@drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="71dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ffwd"
            android:background="#00000000"
            android:padding="0dip"
            android:src="@drawable/ic_media_ff" />

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="71dp"
            android:layout_height="52dp"
            android:layout_alignTop="@+id/rew"
            android:layout_toLeftOf="@+id/rew"
            android:background="#00000000"
            android:padding="0dip"
            android:src="@drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/pause"
            style="@android:style/MediaButton.Play"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/regionBtn"
            style="@style/MyTheme"
            android:layout_width="71dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:src="@drawable/region" />

        <ImageButton
            android:id="@+id/reportBtn"
            style="@style/MyTheme"
            android:layout_width="71dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:src="@drawable/report" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <eyes.blue.modified.RegionableSeekBar
            android:id="@+id/mediacontroller_progress"
            style="@style/SeekBarholo"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>