<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/in_bounce</item>
        <item name="android:windowExitAnimation">@anim/out_bounce</item>
    </style>
    
    <style name="Buttonholo" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ImageButtonholo" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
    </style>

    <style name="SeekBarholo" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_dark</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="swButton">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:background">@drawable/mode_sw_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>